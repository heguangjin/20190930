}
.nowImg,.nowImg2,.nowImg3{
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 4.68rpx;
  border:2.34rpx solid transparent;
  font-size: 53rpx;
  /* background-color: #f2f2f2; */
  color: #BFBFBF;
}
.nowImg{ 
  left:0rpx;
  top:0rpx;
}
.nowImg2{ 
  left:-5rpx;
  top:5rpx;
}
.nowImg3{ 
  left:-10rpx;
  top:10rpx;
}
.textBox{
  display: inline-block;
  vertical-align: top;
  width: 504rpx;
  height: 93.6rpx;
  margin-left: 23.4rpx;
  /* background-color: orangered; */
  position: relative;
}
.textC1Box,.textC2Box{
   /* display: inline-block; */
   position: absolute;
}
.textC1Box{
  left: 0rpx;
  top:-8rpx;
  /* 隐藏 */
  overflow: hidden;
  /* 不换行 */
  white-space: nowrap;
  /* 最后以...结尾 */
  text-overflow: ellipsis;
  width: 220px;
}
.textC2Box{
  margin-left: 23.4rpx;
}
.textC3Box{
  position: absolute;
  left: 0rpx;
  bottom: -4rpx;
  width: 100%;
  /* 隐藏 */
  overflow: hidden;
  /* 不换行 */
  white-space: nowrap;
  /* 最后以...结尾 */
  text-overflow: ellipsis;
}
.textC1,.textC2,.textC3{
  width:100%;
}
.textC1{
  color: #000;
  font-size: 32.76rpx;
  vertical-align: top;
}
.textC2{
  color: #a1a1a1;
  font-size: 28.32rpx;
  vertical-align: top;
  margin-left: 23.4rpx;
}
.textC3{
  color: #a1a1a1;
  font-size: 23.4rpx;
}
